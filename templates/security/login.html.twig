{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form class='container col-10 formulaire p-4 carte' method="post">
    {% if error %}
        <div class="alert alert-danger mb-1 p-0">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <h4 class="h3 mb-3 font-weight-normal">Please sign in</h4>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


        <div class="form-group mt-2 mb-2">
            <label class="">Remember me</label>
            <input class="form-check" type="checkbox" name="_remember_me">
        </div>


    <button class="btn btn-lg btn-primary mt-3" type="submit">
        connexion
    </button>
</form>
{% endblock %}
